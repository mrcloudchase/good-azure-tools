# Upload sample files
az storage blob upload \
    --account-name $storageAccountName \
    --account-key $storageKey \
    --container-name '$web' \
    --name index.html \
    --file index.html \
    --content-type "text/html"

az storage blob upload \
    --account-name $storageAccountName \
    --account-key $storageKey \
    --container-name '$web' \
    --name 404.html \
    --file 404.html \
    --content-type "text/html"

# Clean up local files
rm index.html 404.html

echo "‚úÖ Sample content uploaded!"

## CREATE CDN PROFILE
echo "üåç Creating CDN profile..."
az cdn profile create \
    --resource-group $rg \
    --name $cdnProfileName \
    --location $location \
    --sku Standard_Microsoft

echo "‚úÖ CDN profile created!"

## GET STORAGE ENDPOINT
storageEndpoint=$(az storage account show \
    --name $storageAccountName \
    --resource-group $rg \
    --query 'primaryEndpoints.web' -o tsv | sed 's/https:\/\///' | sed 's/\///')

## CREATE CDN ENDPOINT
echo "üîó Creating CDN endpoint..."
az cdn endpoint create \
    --resource-group $rg \
    --profile-name $cdnProfileName \
    --name $cdnEndpointName \
    --origin $storageEndpoint \
    --origin-host-header $storageEndpoint \
    --origin-path "" \
    --query-string-caching-behavior IgnoreQueryString \
    --http-allowed true \
    --https-allowed true

echo "‚úÖ CDN endpoint created!"

## CONFIGURE CDN CACHING RULES
echo "‚öôÔ∏è Configuring CDN caching rules..."
az cdn endpoint rule add \
    --resource-group $rg \
    --profile-name $cdnProfileName \
    --endpoint-name $cdnEndpointName \
    --order 1 \
    --rule-name "CacheStaticContent" \
    --match-variable RequestUri \
    --operator Contains \
    --match-values "*.css" "*.js" "*.png" "*.jpg" "*.gif" "*.pdf" \
    --action-name CacheExpiration \
    --cache-behavior Override \
    --cache-duration 7.00:00:00

echo "‚úÖ CDN caching rules configured!"

## GET ENDPOINTS AND URLS
staticWebsiteUrl=$(az storage account show \
    --name $storageAccountName \
    --resource-group $rg \
    --query 'primaryEndpoints.web' -o tsv)

cdnUrl="https://$cdnEndpointName.azureedge.net"

blobUrl=$(az storage account show \
    --name $storageAccountName \
    --resource-group $rg \
    --query 'primaryEndpoints.blob' -o tsv)

