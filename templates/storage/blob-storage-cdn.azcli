#!/bin/bash
###############################
####### SCRIPT DETAILS ########
# Name: Blob Storage with CDN
# Purpose: Deploy scalable blob storage with Azure CDN for global content delivery
# Category: storage
# Estimated Cost: $10-30/month (depends on usage)
# Deployment Time: 5-8 minutes
# Disclaimer: This script is intended for Azure sandbox/learning environments
###############################

##############################
##### START - VARIABLES ######
##############################

# Get resource group and set to variable $rg
rg=$(az group list --query '[].name' -o tsv)

# Assign location variable to playground resource group location
location=$(az group list --query '[].location' -o tsv)

# Storage account configuration
storageAccountName="storage$(shuf -i 10000-99999 -n 1)"
containerName="content"
cdnProfileName="cdn-profile-$(shuf -i 1000-9999 -n 1)"
cdnEndpointName="cdn-endpoint-$(shuf -i 1000-9999 -n 1)"

# Performance and redundancy settings
storageSku="Standard_LRS"
storageKind="StorageV2"
accessTier="Hot"

##############################
##### END - VARIABLES ########
##############################

##############################
####### START - SCRIPT #######
##############################

echo "üöÄ Starting Blob Storage + CDN deployment..."

## CREATE STORAGE ACCOUNT
echo "üíæ Creating storage account..."
az storage account create \
    --name $storageAccountName \
    --resource-group $rg \
    --location $location \
    --sku $storageSku \
    --kind $storageKind \
    --access-tier $accessTier \
    --allow-blob-public-access true \
    --https-only true \
    --min-tls-version TLS1_2

echo "‚úÖ Storage account created!"

## GET STORAGE ACCOUNT KEY
echo "üîë Retrieving storage account key..."
storageKey=$(az storage account keys list \
    --resource-group $rg \
    --account-name $storageAccountName \
    --query '[0].value' -o tsv)

echo "‚úÖ Storage key retrieved!"

## CREATE BLOB CONTAINER
echo "üì¶ Creating blob container..."
az storage container create \
    --name $containerName \
    --account-name $storageAccountName \
    --account-key $storageKey \
    --public-access blob

echo "‚úÖ Blob container created!"

## ENABLE STATIC WEBSITE HOSTING
echo "üåê Enabling static website hosting..."
az storage blob service-properties update \
    --account-name $storageAccountName \
    --account-key $storageKey \
    --static-website \
    --404-document 404.html \
    --index-document index.html

echo "‚úÖ Static website hosting enabled!"

